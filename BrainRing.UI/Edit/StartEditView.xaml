<UserControl x:Class="BrainRing.UI.Edit.StartEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BrainRing.UI.Edit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance local:StartEditViewModel}">
    <Grid>
        <StackPanel>
            <TextBlock Text="Режим редактирования"/>
            <Button Content="Загрузить из excel файла"
                    Visibility="Collapsed"
                    Command="{Binding LoadExcelCommand}"/>
            <Button Content="Загрузить из json файла"
                    Command="{Binding LoadJsonCommand}"/>
            <Button Content="Редактировать"
                    Command="{Binding GoNextCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
